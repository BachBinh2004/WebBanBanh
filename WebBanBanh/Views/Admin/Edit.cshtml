@model WebBanBanh.Models.Banh

@{
    ViewData["Title"] = "Edit";
}
<div class = "text-center">
    <h1>Chỉnh sửa thông tin bánh</h1>
</div>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaBanh" />
            
            <div class="form-group">
                <label asp-for="TenBanh" class="control-label">Tên bánh</label>
                <input asp-for="TenBanh" class="form-control" />
                <span asp-validation-for="TenBanh" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Nsx" class="control-label">Ngày sản xuất</label>
                <input asp-for="Nsx" type="date" class="form-control" />
                <span asp-validation-for="Nsx" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Hsd" class="control-label">Hạn sử dụng</label>
                <input asp-for="Hsd" type="date" class="form-control" />
                <span asp-validation-for="Hsd" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Mota" class="control-label">Mô tả</label>
                <textarea asp-for="Mota" class="form-control"></textarea>
                <span asp-validation-for="Mota" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Hinhanh" class="control-label">Link URL của bánh</label>
                <input asp-for="Hinhanh" class="form-control" />
                <span asp-validation-for="Hinhanh" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model?.Hinhanh))
                {
                    <img src="@Model.Hinhanh" class="img-thumbnail mt-2" style="width: 120px; height: 120px; object-fit: cover;" />
                }
            </div>
            
            <div class="form-group">
                <label asp-for="MaLb" class="control-label">Loại bánh</label>
                <select asp-for="MaLb" class="form-control" asp-items="@(ViewData["MaLb"] as SelectList)">
                    <option value="">-- Chọn loại bánh --</option>
                </select>
                <span asp-validation-for="MaLb" class="text-danger"></span>
            </div>
            
             <div class="form-group">
                <label asp-for="Gia" class="control-label">Giá của sản phẩm</label>
                <input asp-for="Gia" type="number" class="form-control" required min="0" step="0.01" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Lưu</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay về</a>
            </div>
        </form>
    </div>
</div>
